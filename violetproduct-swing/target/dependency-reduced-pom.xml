<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>parent</artifactId>
    <groupId>com.horstmann.violet</groupId>
    <version>1.0.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>violetproduct-swing</artifactId>
  <name>Violet UML Editor Pure Java packaging</name>
  <version>${applicationVersion}</version>
  <build>
    <resources>
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*</include>
        </includes>
      </resource>
    </resources>
    <finalName>violetumleditor-${project.version}</finalName>
    <plugins>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <dependencies>
          <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>springloaded</artifactId>
            <version>1.2.0.RELEASE</version>
          </dependency>
        </dependencies>
        <configuration>
          <jvmArguments>-Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=8008</jvmArguments>
          <mainClass>com.horstmann.violet.UMLEditorApplication</mainClass>
          <folders>
            <folder>${project.parent.build.directory}../../violet-framework/target/classes</folder>
            <folder>${project.parent.build.directory}../../violetplugin-classdiagram/target/classes</folder>
            <folder>${project.parent.build.directory}../../violetplugin-communicationdiagram/target/classes</folder>
            <folder>${project.parent.build.directory}../../violetplugin-sequencediagram/target/classes</folder>
            <folder>${project.parent.build.directory}../../violetplugin-statediagram/target/classes</folder>
            <folder>${project.parent.build.directory}../../violetplugin-usecasediagram/target/classes</folder>
            <folder>${project.parent.build.directory}../../violetplugin-activitydiagram/target/classes</folder>
            <folder>${project.parent.build.directory}../../violetplugin-objectdiagram/target/classes</folder>
          </folders>
          <excludeArtifactIds>violet-framework,violetplugin-classdiagram,violetplugin-communicationdiagram,violetplugin-sequencediagram,violetplugin-statediagram,violetplugin-usecasediagram,violetplugin-activitydiagram,violetplugin-objectdiagram</excludeArtifactIds>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.3.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
              <transformers>
                <transformer>
                  <resource>META-INF/services/com.horstmann.violet.framework.plugin.IDiagramPlugin</resource>
                </transformer>
                <transformer>
                  <mainClass>com.horstmann.violet.UMLEditorApplication</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <phase>deploy</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <serverId>sourceforge</serverId>
              <skip>false</skip>
              <target>
                <property />
                <echo />
                <copy />
                <scp>
                  <fileset>
                    <include />
                  </fileset>
                </scp>
              </target>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>org.apache.ant</groupId>
            <artifactId>ant-jsch</artifactId>
            <version>1.10.12</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
</project>

